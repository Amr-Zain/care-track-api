{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",

    "incremental": true, 
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "strict": false
  },
  "lib": ["es2015"],
  "include":["./src/**/*"],
  "exclude": [
    "node_modules",            
    "**/*.test.ts",            
    "**/*.spec.ts",
    "dist"                     
  ]
  
}